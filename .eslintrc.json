{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "semi":["error","always"],
        "no-unused-vars":["warn",{"vars":"local", "args":"after-used"}],
        "indent": ["error", 4],
        "no-multiple-empty-lines":["error",{ "max": 2, "maxEOF": 1 }]
    }
}